openapi: 3.1.0
info:
  title: Feasibility Study API
  version: 1.0.0
  description: API for project feasibility analysis by an expert assistant.
servers:
  - url: https://api.example.com
    description: Production Server
  - url: http://localhost:3000
    description: Local Development Server
paths:
  /initialisation/cadrage:
    post:
      summary: Generate a project framing note
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/CadrageRequest'
      responses:
        '200':
          description: Framing note created successfully
  /initialisation/raci:
    get:
      summary: Generate a RACI matrix
      responses:
        '200':
          description: RACI matrix generated
  /technique/analyse-besoins:
    post:
      summary: Analyze technical needs
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/BesoinsTechniques'
      responses:
        '200':
          description: Technical analysis completed
  /commerciale/analyse-marche:
    post:
      summary: Generate market analysis
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/AnalyseMarche'
      responses:
        '200':
          description: Market analysis generated
  /commerciale/strategie-marketing:
    post:
      summary: Create marketing strategy (4P)
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/StrategieMarketing'
      responses:
        '200':
          description: Marketing strategy generated
  /finance/calcule-indicateurs:
    post:
      summary: Calculate NPV, IRR and Payback
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/FinanceRequest'
      responses:
        '200':
          description: Financial indicators calculated
  /impact/environnemental:
    post:
      summary: Generate environmental impact report (LCA)
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ImpactEnv'
      responses:
        '200':
          description: Environmental report generated
  /telechargement/modele:
    get:
      summary: Download Excel feasibility model
      responses:
        '200':
          description: Excel file download link
  /upload/etude:
    post:
      summary: Upload a feasibility Excel file for analysis
      requestBody:
        content:
          multipart/form-data:
            schema:
              type: object
              properties:
                file:
                  type: string
                  format: binary
              required:
                - file
      responses:
        '200':
          description: File uploaded and analyzed
components:
  schemas:
    CadrageRequest:
      type: object
      properties:
        nom_projet:
          type: string
        objectif:
          type: string
        parties_prenantes:
          type: array
          items:
            type: string
        contraintes:
          type: array
          items:
            type: string
        interactions_projets:
          type: array
          items:
            type: string
      required:
        - nom_projet
        - objectif
    BesoinsTechniques:
      type: object
      properties:
        produits:
          type: array
          items:
            type: string
        normes:
          type: array
          items:
            type: string
        ressources:
          type: array
          items:
            type: string
      required:
        - produits
    AnalyseMarche:
      type: object
      properties:
        produit:
          type: string
        cible:
          type: string
        zone_geographique:
          type: string
      required:
        - produit
        - cible
    StrategieMarketing:
      type: object
      properties:
        produit:
          type: string
        concurrents:
          type: array
          items:
            type: string
        prix:
          type: string
        canaux:
          type: array
          items:
            type: string
      required:
        - produit
    FinanceRequest:
      type: object
      properties:
        investissement_initial:
          type: number
        flux_annuels:
          type: array
          items:
            type: number
        taux_actualisation:
          type: number
      required:
        - investissement_initial
        - flux_annuels
        - taux_actualisation
    ImpactEnv:
      type: object
      properties:
        activité:
          type: string
        consommation_energie:
          type: string
        matières_premières:
          type: array
          items:
            type: string
        émissions_CO2:
          type: number
      required:
        - activité
